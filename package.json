{
  "name": "testing_nuxt",
  "version": "1.0.0",
  "description": "My well-made Nuxt.js project",
  "author": "Syaiful Anwar",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "pretty": "prettier --write --tab-width 2 \"src/**/*.js\""
  },
  "dependencies": {
    "frontmatter-markdown-loader": "^3.1.0",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/tailwindcss": "^1.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "prettier": "^1.16.4"
  },
  "lint-staged": {
    "*.{js, vue}": [
      "npm run pretty",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
